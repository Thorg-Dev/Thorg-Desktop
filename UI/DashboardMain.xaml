<UserControl x:Class="GolemUI.DashboardMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:local="clr-namespace:GolemUI"
             mc:Ignorable="d"
             FontFamily="SegoeUI" d:DesignHeight="450" d:DesignWidth="850"
          
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/CommonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource PageBackground}" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Width="232" Height="40" BorderThickness="1 0 0 0" BorderBrush="White" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30, 30, 0, 0">
                <Label Foreground="#FFFFFF" Content="Dashboard" FontFamily="SegoeUI" FontSize="24"></Label>
                <!--<Label Content="Dashboard"></Label>-->
            </Border>
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="30,0,0,0">
                <Label Margin="0,0,0,10" Name="lblStatusDescr" Content="Status: " VerticalAlignment="Bottom"></Label>
                <Label Margin="0,0,0,10" FontWeight="Bold" Name="lblStatus" Content="computing task" VerticalAlignment="Bottom"></Label>
            </StackPanel>

            <StackPanel Margin="0,0,30,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
                <Button Name="btnStart" Style="{StaticResource GradientButtonStyle  }" Click="btnStart_Click" Width="187" Height="40" Margin="10,0,0,10" >Start Mining</Button>
                <Button Name="btnStop" Click="btnStop_Click" Style="{StaticResource BlueButtonStyle}" Height="40" Width="90" Margin="10,0,0,10">Stop Mining</Button>
            </StackPanel>
            <Grid Margin="30, 0, 30, 0" Canvas.Top="220" Width="auto" Height="auto" Grid.Row="2" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.8*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,10,10" Grid.Column="0">
                    <Canvas>
                        <svgc:SvgViewbox Source="/Media/balance.svg" Canvas.Left="14" Canvas.Top="60" Width="67" Height="71"/>
                        <!--<ContentPresenter Content="{StaticResource balance}" Canvas.Left="94" Canvas.Top="60" Width="67" Height="71"></ContentPresenter>-->
                        <Label Content="MyBalance" Foreground="#FFFFFF" Canvas.Left="10" Canvas.Top="10" FontFamily="SegoeUI" FontSize="17" Height="35" Width="97"></Label>
                        <Label Content="Earned" Foreground="#FFFFFF" Canvas.Left="95" Canvas.Top="57"></Label>
                        <Label Name="lblTotalUSD" Content="1234$" Foreground="#FFFFFF" Canvas.Left="141" Canvas.Top="50" FontFamily="SegoeUIBlack" FontSize="20" RenderTransformOrigin="0.374,0.428" Width="107"></Label>
                        <Label Name="lblTotalGLM" Content="10000.33GLM" Foreground="#FFFFFF" Canvas.Left="139" Canvas.Top="87"></Label>
                        <Label Content="Pending:" Foreground="#FFFFFF" Canvas.Left="83" Canvas.Top="131" />
                        <Label Name="lblPendingUSD" Content="12.34$" Foreground="#FFFFFF" Canvas.Left="140" Canvas.Top="126" FontFamily="SegoeUIBlack" FontSize="20"/>
                        <Label Name="lblPendingGLM" Content="345.66GLM" Foreground="#FFFFFF" Canvas.Left="139" Canvas.Top="160" FontFamily="SegoeUI"/>
                    </Canvas>
                </Border>
                <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10" Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <svgc:SvgViewbox Source="/Media/profit.svg" Canvas.Left="14" Canvas.Top="60" Width="67" Height="71"/>

                        <Label Content="Estimated profit" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Foreground="#FFFFFF"></Label>
                        <Label Name="lblEstimatedProfit" Content="10.42$/day" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" Foreground="#FFFFFF"></Label>
                    </Grid>
                </Border>
                <Button Name="MiningBox" Style="{DynamicResource BlueButtonStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10" MouseDown="MiningBox_MouseDown" Grid.Column="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <svgc:SvgViewbox Source="/Media/gpu.svg" Canvas.Left="14" Canvas.Top="60" Width="60" Height="40"/>
                        <Label Content="GPU Mining" Foreground="White" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"></Label>
                        <TextBlock Name="txtGpuStatus" Foreground="White" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2">Inactive</TextBlock>
                        <Label Content="Benchmark" Foreground="White" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3"></Label>
                    </Grid>
                </Button>
                <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,0,10" Grid.Column="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <svgc:SvgViewbox Source="/Media/cpu.svg" Canvas.Left="14" Canvas.Top="60" Width="40" Height="40"/>
                        <Label Content="CPU Mining" Foreground="White"  HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"></Label>
                        <CheckBox Content="Idle" HorizontalAlignment="Center"  Foreground="White" Grid.Column="0" Grid.Row="2"></CheckBox>
                        <Label Content="Advanced" Foreground="Blue" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3"></Label>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
