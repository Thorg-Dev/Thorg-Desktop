<UserControl x:Class="GolemUI.GpuMiningPanelUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GolemUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="spMain">
            <StackPanel>
                <Label x:Name="lblStatus" Content="Benchmarks status" Foreground="White"></Label>
                <Label x:Name="lblPower" Content="Total Power" Foreground="White"></Label>
                <ProgressBar x:Name="pbBenchmark" Height="20"></ProgressBar>
            </StackPanel>

            <StackPanel>
                <Label x:Name="GpuList" Content="GpuList"></Label>
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <StackPanel x:Name="spGpuList" Orientation="Vertical">

                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>   
    </Grid>
</UserControl>
