<UserControl x:Class="GolemUI.GpuMiningPanelUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GolemUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/CommonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{DynamicResource PageBackground}">
        <Canvas>

            <Label x:Name="lblStatus" Content="Benchmarks status" Canvas.Top="20" Canvas.Right="20"></Label>
            <Label x:Name="lblPower" Content="Total Power" Canvas.Left="42" Canvas.Top="20" FontSize="20"></Label>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Canvas.Top="80" Width="550" MinHeight="40" Canvas.Left="0" Canvas.Right="0">
                <StackPanel x:Name="spGpuList" Orientation="Vertical">

                </StackPanel>
            </ScrollViewer>
        </Canvas>
    </Border>
</UserControl>
