<UserControl x:Class="GolemUI.GpuMiningPanelUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GolemUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/CommonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{DynamicResource PageBackground}">
        <Canvas>

            <Label x:Name="lblStatus" Content="Benchmarks status" Canvas.Top="28" Canvas.Right="20" Foreground="Beige"></Label>
            <Label x:Name="lblPower" Content="Total Power" Canvas.Top="23" FontSize="20" Foreground="White" FontWeight="Bold"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Canvas.Top="70" Width="580" MinHeight="40" Height="200px" Canvas.Left="0" Canvas.Right="0">
                <StackPanel x:Name="spGpuList" Orientation="Vertical">

                </StackPanel>
            </ScrollViewer>
            <Label x:Name="lblPower_Copy" Content="Total mining hashrate:" Canvas.Top="1" FontSize="10" Foreground="White"/>
        </Canvas>
    </Border>
</UserControl>
