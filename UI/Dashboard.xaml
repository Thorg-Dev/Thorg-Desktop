<Window x:Class="GolemUI.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GolemUI"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:tb="http://www.hardcodet.net/taskbar"     
        xmlns:commands="clr-namespace:GolemUI.Notifications"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Title="Dashboard" Height="524" Width="974" MinHeight="524" MinWidth="974" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid x:Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="400*"/>
        </Grid.ColumnDefinitions>

        <tb:TaskbarIcon Visibility="Hidden" x:Name="tbNotificationIcon" IconSource="/Media/tray.ico" ToolTipText="GolemUI" DoubleClickCommand="{commands:ShowWindowCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show" Command="{commands:ShowWindowCommand}"/>
                    <Separator />
                    <MenuItem Header="Close" Command="{commands:CloseWindowCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <Border BorderThickness="0" BorderBrush="Black" Background="#710D39" Grid.Column="0" Grid.Row="0" MouseDown="TitleBar_MouseDown">
            <Label Foreground="White" VerticalAlignment="Center">GolemUI 0.0.1</Label>
        </Border>

        <Border BorderThickness="0" BorderBrush="Black" Background="#710D39" Grid.Column="1" Grid.Row="0" MouseDown="TitleBar_MouseDown">
            <DockPanel>
                <DockPanel x:Name="TitleBar" DockPanel.Dock="Top">
                    <Button x:Name="CloseButton" Content="X" DockPanel.Dock="Right" Click="CloseButton_Click" />
                    <Button x:Name="MinButton" Content="Min" DockPanel.Dock="Right" Click="MinButton_Click" />
                    <TextBlock HorizontalAlignment="Center"> </TextBlock>
                </DockPanel>
            </DockPanel>
        </Border>



        <Border x:Name="brdNavigation" BorderBrush="White" Background="#110D39" Grid.Column="0" Grid.Row="1" BorderThickness="0 0 1 0" >
            <StackPanel>
                <Button x:Name="btnPage1" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Margin="0,40,0,0" Click="Page1Click">
                    <svgc:SvgViewbox Source="/Media/nav_dashboard.svg"/>
                </Button>
                <Button x:Name="btnPage2" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Margin="0,40,0,0" Click="Page2Click">
                    <svgc:SvgViewbox Source="/Media/nav_settings.svg"/>
                </Button>
                <Button x:Name="btnPage5" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Margin="0,40,0,0" Click="Page5Click">
                    <svgc:SvgViewbox Source="/Media/nav_settings.svg"/>
                </Button>
                <Button x:Name="btnPage6" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Margin="0,40,0,0" Click="Page6Click">
                    <svgc:SvgViewbox Source="/Media/nav_wallet.svg"/>
                </Button>
                <Button x:Name="btnPage3" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Margin="0,40,0,0" Click="Page3Click">
                    <svgc:SvgViewbox Source="/Media/nav_wallet.svg"/>
                </Button>
            </StackPanel>
        </Border>

        <Border BorderThickness="0" BorderBrush="Black" Background="#110D39" Grid.Column="1" Grid.Row="1">
            <Grid x:Name="tcNo1" >
            </Grid>
        </Border>
    </Grid>
</Window>
