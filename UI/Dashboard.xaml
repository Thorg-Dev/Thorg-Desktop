<Window x:Class="GolemUI.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lui="clr-namespace:GolemUI"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:commands="clr-namespace:GolemUI.Notifications"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        x:Name="DashboardWindow"
        Title="Dashboard" Height="524" Width="974" Closing="Window_Closing" Loaded="Window_Loaded" Icon="/Media/tray.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- icons begin -->
                <ResourceDictionary Source="Icons/DefaultStyle/xaml/DashboardMenu/DashboardIcon.xaml"/>
                <ResourceDictionary Source="Icons/DefaultStyle/xaml/DashboardMenu/SettingsIcon.xaml"/>
                <ResourceDictionary Source="Icons/DefaultStyle/xaml/DashboardMenu/WalletIcon.xaml"/>
                <!-- icons end -->
                
                <ResourceDictionary Source="Themes/Defaults.xaml"/>
                <ResourceDictionary Source="Themes/Borders/BlueBorder.xaml"/>
                <ResourceDictionary Source="Themes/WindowControls.xaml"/>
                <ResourceDictionary Source="Themes/Buttons/GradientButton.xaml"/>
                <ResourceDictionary Source="Themes/Buttons/HyperLinkButton.xaml"/>
                <ResourceDictionary Source="Themes/Borders/PageBackground.xaml"/>
                <ResourceDictionary>
                    <ContextMenu x:Key="TrayMenu">
                        <MenuItem Header="Show" Command="{commands:ShowWindowCommand}"/>
                        <Separator />
                        <MenuItem Header="Close" Command="{commands:CloseWindowCommand}"/>
                    </ContextMenu>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="grdMain" HorizontalAlignment="Stretch" Margin="0" Background="{DynamicResource MainWindow.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <tb:TaskbarIcon Visibility="Hidden" 
                        x:Name="tbNotificationIcon" IconSource="/Media/tray.ico" ToolTipText="GolemUI" DoubleClickCommand="{Binding ElementName=DashboardWindow, Path=ShowCommand, Mode=OneWay}" ContextMenu="{StaticResource TrayMenu}"/>



        <Border Grid.Column="0" Grid.Row="0" MouseDown="TitleBar_MouseDown" Style="{DynamicResource MainWindow}">
            <Label Foreground="White" VerticalAlignment="Center" Visibility="Hidden">GolemUI 0.0.1</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="0" MouseDown="TitleBar_MouseDown" Style="{DynamicResource MainWindow}">
            <DockPanel>
                <DockPanel x:Name="TitleBar" DockPanel.Dock="Top">
                    <Button x:Name="CloseButton" Content="Close" DockPanel.Dock="Right" Click="CloseButton_Click" Style="{DynamicResource CloseWindowButton}"/>
                    <Button x:Name="MinButton" Content="Min" DockPanel.Dock="Right" Click="MinButton_Click" Style="{DynamicResource MinWindowButton}"/>
                    <TextBlock HorizontalAlignment="Center"></TextBlock>
                </DockPanel>
            </DockPanel>
        </Border>
        <Border x:Name="brdNavigation" BorderBrush="White" Background="#110D39" Grid.Column="0" Grid.Row="1" BorderThickness="0 0 1 0"  Margin="0,40,0,0">
            <StackPanel >
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,40,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="btnPage1" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Click="Page1Click" Padding="0">
                    <ContentControl Content="{DynamicResource Dashboard_Icon}" />
                </Button>
                <Button x:Name="btnPage2" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Click="Page2Click">
                    <ContentControl Content="{DynamicResource Settings_Icon}" />
                </Button>
                <Button x:Name="btnPage6" Width="30" Height="30" BorderThickness="0" BorderBrush="Black" Background="#110D39" Click="Page6Click">
                    <ContentControl Content="{DynamicResource Wallet_Icon}"  />
                </Button>
            </StackPanel>
        </Border>

        <Border BorderThickness="0" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MainWindow}">
            <Grid x:Name="tcNo1" >
            </Grid>
        </Border>
    </Grid>
</Window>
