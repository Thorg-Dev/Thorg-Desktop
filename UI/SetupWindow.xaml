<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:GolemUI.UI"
        xmlns:DataAccess="clr-namespace:GolemUI.DataAccess" x:Class="GolemUI.UI.SetupWindow"
        xmlns:lv="clr-namespace:GolemUI.DesignViewModel"             
        d:DataContext="{d:DesignInstance Type=lv:SetupViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        WindowStyle="None"  
    ResizeMode="CanResizeWithGrip"
    AllowsTransparency="True"
    Background="Transparent"        
        Title="SetupWindow" Height="720" Width="1280">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/CommonResources.xaml"/>
                <ResourceDictionary Source="Icons/SetupResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource SetupWindow.Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0" MouseDown="TitleBar_MouseDown"></Label>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Style="{DynamicResource MinWindowButton}" Click="MinimizeApp" Grid.Column="1"/>
            <Button Style="{DynamicResource CloseWindowButton}" Click="CloseApp" Grid.Column="2"/>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="216"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label FontFamily="Segoe UI" FontSize="22" Grid.Column="1" Margin="0, -14">Getting Started</Label>
            <TabControl Grid.Row="1" Grid.Column="1" Background="Transparent" BorderBrush="Transparent" SelectedIndex="{Binding Path=Flow, Mode=OneWay}">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Visibility" Value="{Binding Path=IsDesingMode, Converter={StaticResource BoolToVisibleConverter}}"></Setter>
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabItem Header="Start">
                    <StackPanel Orientation="Vertical">
                        <Label FontSize="16" FontWeight="Bold" Margin="0, 50">Choose your path</Label>
                        <UniformGrid Columns="2" Rows="1">
                            <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" Margin="8">
                                <StackPanel Margin="32">
                                    <Label FontFamily="Segoe UI Black" FontSize="14">I wish To Learn</Label>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentControl Content="{DynamicResource Whish_to_learn_icon}" Margin="22, 16"/>
                                        <StackPanel Grid.Column="1" Margin="28, 8">
                                            <TextBlock FontFamily="Arial" FontSize="12" Margin="8">Choose this option if you would like us to guide you trough the process step by step and help you learn about safety</TextBlock>
                                            <Button Style="{DynamicResource GradientButtonStyle}" Margin="8" MinHeight="32" Content="I Want to Learn" Click="WantToLearn_Click"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal">


                                    </StackPanel>

                                </StackPanel>
                            </Border>
                            <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" Margin="8">
                                <StackPanel Margin="32">
                                    <Label FontFamily="Segoe UI Black" FontSize="14">I’m quite experienced</Label>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentControl Content="{DynamicResource i_em_expert_icon}" Margin="22, 16"/>
                                        <StackPanel Grid.Column="1" Margin="28, 8">
                                            <TextBlock FontFamily="Arial" FontSize="12" Margin="8">
                                                You should know what you are doing and you own your own cryoto wallet allready.
                                            </TextBlock>
                                            <Button Style="{DynamicResource GradientButtonStyle}" Margin="8" MinHeight="32" Content="I'm an expert" Click="ExpertMode_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>

                </TabItem>
                <TabItem Header="WantToLearn">
                    <StackPanel>
                        <Label>I Want To Learn</Label>
                        <TabControl Background="Transparent" BorderThickness="0">
                            <!--TabControl.ItemContainerStyle>
                                <Style TargetType="{x:Type TabItem}">
                                    <Setter Property="Visibility" Value="{Binding Path=IsDesingMode, Converter={StaticResource BoolToVisibleConverter}}"></Setter>
                                </Style>
                            </TabControl.ItemContainerStyle-->
                            <TabItem Header="Prepare">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="275"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentControl Content="{DynamicResource Prepare_Step_icon}" Margin="20"/>
                                    <StackPanel Width="400" Margin="50" Grid.Column="1">
                                        <TextBlock FontFamily="Arial" FontSize="18" FontWeight="Bold" Margin="0, 0, 0 15">We will create a wallet for you</TextBlock>
                                        <TextBlock FontFamily="Arial" FontSize="14">You will need</TextBlock>
                                        <TextBlock FontFamily="Arial" FontSize="14" FontWeight="Bold" Margin="0, 10">- Pen and Paper</TextBlock>
                                        <TextBlock FontFamily="Arial" FontSize="14" FontWeight="Bold" Margin="0, 10">- or active printer</TextBlock>
                                        <UniformGrid Margin="10, 30" Rows="1">
                                            <Button Content="Cancel" Margin="8" HorizontalAlignment="Stretch" Style="{DynamicResource HyperLinkButtonStyle}"/>
                                            <Button Content="Got It!" Margin="8" HorizontalAlignment="Stretch" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep1">

                                            </Button>
                                        </UniformGrid>
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Seed Phase">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="275"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="64"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentControl Content="{DynamicResource Seed_Step_icon}" Margin="20"/>
                                    <StackPanel Width="400" Margin="50" Grid.Column="1">
                                        <TextBlock FontFamily="Arial" FontSize="18" FontWeight="Bold" Margin="0, 0, 0 15">Your wallet is being created…</TextBlock>
                                        <TextBlock FontFamily="Arial" FontSize="14">In a seccond you will be presented with 12 words.</TextBlock>
                                        <TextBlock FontFamily="Arial" FontSize="14" Margin="0, 10">
They are a backup for your wallet and in case your disk fails or any other unexpected situation - you will be able to recreate your wallet with your earnings in any external wallet!</TextBlock>
                                        <UniformGrid Margin="10, 30" Rows="1">



                                        </UniformGrid>
                                    </StackPanel>
                                    <Button Content="Got It!" Margin="18" HorizontalAlignment="Stretch" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep2"
                                            Grid.Row="1" Grid.Column="1"/>
                                    <Label Grid.Row="2"></Label>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Seed Phase">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="275"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="64"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentControl Content="{DynamicResource Print_Step_icon}" Margin="20,20,20,46"/>
                                    <StackPanel Width="400" Margin="80,50,79,7" Grid.Column="1">
                                        <TextBlock FontFamily="Arial" FontSize="22" FontWeight="Bold" Margin="0, 0, 0 15">Write down this words</TextBlock>
                                        <UniformGrid Columns="3" Margin="12">
                                            <TextBlock FontFamily="Arial" FontSize="16">1. Bulb</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">2. Thick</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">3. Neon</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">4. Bread</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">5. Cup</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">6. Flower</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">7. Leaf</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">8. Shoe</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">9. Coffee</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">10. Hand</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">11. Bump</TextBlock>
                                            <TextBlock FontFamily="Arial" FontSize="16">12. Yeah</TextBlock>
                                        </UniformGrid>
                                    </StackPanel>
                                    <Button Content="Got them all" Margin="50, 18" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep2"
                                            Grid.Row="1" Grid.Column="1"/>
                                    <Button Content="Print" Margin="18" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep2"
                                            Grid.Row="1" Grid.Column="0" />
                                    <Label Grid.Row="2" Grid.ColumnSpan="3" Margin="10"/>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Name">

                            </TabItem>
                            <TabItem Header="Benchmark">

                            </TabItem>

                        </TabControl>
                    </StackPanel>

                </TabItem>
                <TabItem Header="Expert">
                    <Label>Expert</Label>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
