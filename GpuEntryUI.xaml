<UserControl x:Class="GolemUI.GpuEntryUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GolemUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="750">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Name="lblInfo" Content="lblName" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Name="cbEnableMining" Content="Enable mining" IsChecked="True"></CheckBox>
            <StackPanel Orientation="Horizontal">
                <Label Name="lblProgress" Content="lblProgress" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <ProgressBar Name="pbProgress" HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Width="100"/>
                <Label Name="lblPower" Content="lblPower" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
