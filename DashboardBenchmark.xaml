<UserControl x:Class="GolemUI.DashboardBenchmark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GolemUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Border Canvas.Left="20" Canvas.Top="30" Background="#ffffff" Width="232" Height="40" >
            <Label Content="Benchmark"></Label>
        </Border>
        <local:GpuMiningPanelUI x:Name="gpuMiningPanel" Canvas.Left="20" Canvas.Top="145" Width="600"/>

        <Button x:Name="btnStartBenchmark" Content="Start benchmark" Click="btnStartBenchmark_Click" Canvas.Left="20" Canvas.Top="91" Height="42" Width="170"/>
        <Button x:Name="btnStopBenchmark" Content="Stop benchmark" Click="btnStopBenchmark_Click" Canvas.Left="230" Canvas.Top="91" Height="42" Width="170"/>
    </Canvas>
</UserControl>
